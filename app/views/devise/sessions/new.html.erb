
<%= form_with model: @user, url: user_session_path, local: true do |f| %>
<div class="container px-5 px-sm-0">

  <center>
   <div style="padding-top:30px;">
    <div class="col-5 col-sm-4 text-left">
     <h2>ログインする</h2>
    </div>
   </div>

   <div class="field">
    <div style="padding-top:20px;">
     <div class="col-5 col-sm-4 text-left">
      <p>ユーザーネーム</p>
      <%= f.text_field :name, :size=>"30px", autofocus: true, autocomplete: "name" %>
     </div>
    </div>
   </div>

   <div class="field">
    <div style="padding-top:20px;">
     <div class="col-5 col-sm-4 text-left">
      <p>Eメールアドレス</p>
      <%= f.email_field :email, :size=>"50px", autofocus: true, autocomplete: "email" %>
     </div>
    </div>
   </div>

   <% if devise_mapping.rememberable? %>
    <div class="field">
     <div style="padding-top:20px;">
       <div class="col-5 col-sm-3">
        <div class="row">
         <div>
          <%= f.check_box :remember_me %>
         </div>
         <div  style="padding-left:20px;">
          <p>ログイン状態を保存する</p>
         </div>
        </div>
       </div>
     </div>
    </div>
   <% end %>

   <div class="field">
    <div style="padding-top:10px;">
     <div class="col-5 col-sm-4 text-left">
      <p>パスワード</p>
      <%= f.password_field :password, :size=>"30px", autocomplete: "new-password" %>
     </div>
    </div>
   </div>

   <div class="actions">
    <div class="col-5 col-sm-4">
     <div style="padding-top:20px;">
      <div class="p-1 mb-1">
       <%= f.submit "ログイン", class: "btn btn-success sign-btn" %>
      </div>
     </div>
    </div>
   </div>

   <div class="field">
     <div style="padding-top:20px;">
      <div class="row col-sm-4">
       <div>
        <p>まだ、登録していない方は</p>
       </div>
       <div style="padding-left:5px;">
        <%= link_to "新規登録", new_user_registration_path, class: "btn btn-primary" %>
       </div>
      </div>
     </div>
    </div>

  </center>
 <% end %>
</div>


