<div class="container px-6 px-sm-0">
 <center>
  <div style="padding-top:10px;">
   <div class="col-5 col-sm-5">
    <h3>新規投稿</h3>
   </div>
  </div>

  <%= form_with model:@post, url: '/post', local: true do |f| %>
   <div class="field">
    <div style="padding-top:5px;">
     <div class="col-5 col-sm-5 text-left">
      <p>投稿画像</p>
        <%= f.attachment_field :image %>
     </div>
    </div>
   </div>

   <div class="field">
    <div style="padding-top:10px;">
     <div class="col-5 col-sm-5">
      <%= f.text_area :contents, :size=>"30x3", placeholder:"内容を入力してください", class: "form-control" %>
     </div>
    </div>
   </div>

   <div class="field">
    <div style="padding-top:10px;">
     <div class="col-5 col-sm-5">
      <p class="text-left">タグ</p>
      <%= f.text_field :tag_list, value: @post.tag_list.join(','), class: "form-control" %>
     </div>
    </div>
   </div>

   <div class="field">
    <div style="padding-top:10px;">
     <div class="col-5 col-sm-5 text-left">
      <p>撮影ポイント（例）羽田空港第２ターミナル展望デッキ</p>
       <div class='map-btn'>
        <%= f.text_field :address, class: "form-control" %>
       <div>
     </div>
    </div>
   </div>

   <div class="field">
    <div style="padding-top:20px; padding-bottom:50px;">
     <div class="col-5 col-sm-5">
      <%= f.submit "投稿する", class: "btn btn-success sign-btn" %>
     </div>
    </div>
   </div>



  <% end %>

 </center>

</div>